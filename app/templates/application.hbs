{{head-layout}}

<header>
  <nav class="flex items-center justify-between flex-wrap bg-gray-800 p-3 md:px-16 lg:px:32">
    <div class="flex items-center flex-shrink-0 text-white mr-6">
      {{#link-to "episodes"}}
        <img class="fill-current h-8 w-40 mr-2" alt="ember weekend logo" src="/assets/images/site-header-logo-emberweekend.svg">
      {{/link-to}}
    </div>
    <div class="w-full block flex-grow xs:flex xs:items-center xs:w-auto">
      <div class="text-sm xs:flex-grow">
      </div>
      <div>
        <a href="/feed.xml" class="block mt-4 xs:mt-0 md:mt-0 inline-block text-center text-xl text-gray-700 hover:text-white mr-1 bg-gray-600 hover:bg-orange-300 w-8 h-8 rounded-full" target="_blank" rel="nofollow noopener">
          {{fa-icon "fa-rss"}}
        </a>
        {{#link-to "about" class="block mt-4 xs:mt-0 md:mt-0 inline-block text-center text-xl text-gray-700 hover:text-white mr-1 bg-gray-600 hover:bg-orange-300 w-8 h-8 rounded-full"}}
          {{fa-icon "fa-info"}}
        {{/link-to}}
        <a href="/blog" class="block mt-4 xs:mt-0 md:mt-0 inline-block text-center text-xl text-gray-700 hover:text-white bg-gray-600 hover:bg-orange-300 w-8 h-8 rounded-full" rel="noopener" target="_blank">
          {{fa-icon "fa-book" }}
        </a>
      </div>
    </div>
  </nav>
</header>

<main class="flex-1 overflow-auto mb-24 bg-gray-200">
  {{liquid-outlet class="wrapper"}}
</main>

<footer class="fixed bottom-0 w-full bg-white">
  {{audio-player}}
</footer>
